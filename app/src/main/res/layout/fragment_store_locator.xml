<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.StoreLocatorFragment">

 <com.google.android.gms.maps.MapView
     android:id="@+id/map_layout"
     android:name="com.google.android.gms.maps.SupportMapFragment"
     android:layout_width="match_parent"
     android:layout_height="@dimen/_200sdp"
     app:layout_constraintStart_toStartOf="parent"
     app:layout_constraintTop_toTopOf="parent" />

 <androidx.appcompat.widget.AppCompatButton
     android:id="@+id/btn_get_store"
     android:layout_width="match_parent"
     android:layout_marginLeft="@dimen/_10sdp"
     android:layout_marginRight="@dimen/_10sdp"
     android:padding="@dimen/_5sdp"
     android:text="@string/getstore"
     android:textSize="@dimen/_15ssp"
     android:textColor="@color/color_white"
     android:fontFamily="@font/gothammedium"
     android:layout_height="wrap_content"
     android:layout_marginTop="32dp"
     android:background="@drawable/bg_button_buynow"
     app:layout_constraintEnd_toEndOf="parent"
     app:layout_constraintHorizontal_bias="0.498"
     app:layout_constraintStart_toStartOf="parent"
     app:layout_constraintTop_toBottomOf="@+id/map_layout" />

 <androidx.appcompat.widget.AppCompatTextView
     android:id="@+id/txt_place"
     android:layout_width="match_parent"
     android:layout_height="wrap_content"
     android:layout_marginLeft="@dimen/_10sdp"
     android:layout_marginTop="56dp"
     android:layout_marginRight="@dimen/_10sdp"
     android:background="@drawable/bg_edit_quantity"
     android:fontFamily="@font/gothammedium"
     android:padding="@dimen/_10sdp"
     android:textColor="@color/color_black_dark"
     android:textSize="@dimen/_15ssp"
     app:layout_constraintEnd_toEndOf="parent"
     app:layout_constraintHorizontal_bias="0.48"
     app:layout_constraintStart_toStartOf="parent"
     app:layout_constraintTop_toBottomOf="@+id/btn_get_store" />
</androidx.constraintlayout.widget.ConstraintLayout>