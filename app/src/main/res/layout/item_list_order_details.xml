<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
   >

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/iv_order_details"
        android:layout_width="@dimen/_80sdp"
        android:layout_height="@dimen/_80sdp"
        android:layout_marginStart="@dimen/_10sdp"
        android:layout_marginLeft="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_15sdp"
        android:layout_marginBottom="@dimen/_10sdp"
        android:background="@color/color_light_grey"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/txt_order_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_10sdp"
        android:layout_marginLeft="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_24sdp"
        android:fontFamily="@font/gothammedium"
        android:textSize="@dimen/_15ssp"
        android:textStyle="bold"
        android:layout_marginRight="@dimen/_10sdp"
        android:padding="@dimen/_1sdp"
        android:textColor="@color/color_black_dark"
        android:text="itemtitle"
        app:layout_constraintStart_toEndOf="@+id/iv_order_details"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/txt_order_catagory"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_10sdp"
        android:layout_marginLeft="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_5sdp"
        android:text="@string/catagory"
        android:fontFamily="@font/gothambook"
        android:textSize="@dimen/_15ssp"
        android:layout_marginRight="@dimen/_10sdp"
        android:textStyle="italic"
        android:padding="@dimen/_2sdp"
        app:layout_constraintStart_toEndOf="@+id/iv_order_details"
        app:layout_constraintTop_toBottomOf="@+id/txt_order_title" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/txt_order_quantity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_10sdp"
        android:layout_marginLeft="@dimen/_24sdp"
        android:layout_marginTop="@dimen/_8sdp"
        android:fontFamily="@font/gothambook"
        android:padding="@dimen/_4sdp"
        android:textSize="@dimen/_15ssp"
        android:layout_marginBottom="@dimen/_10sdp"
        android:text="@string/enter_quantity"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/iv_order_details"
        app:layout_constraintTop_toBottomOf="@+id/txt_order_catagory"
        app:layout_constraintVertical_bias="0.0" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/txt_order_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_40sdp"
        android:layout_marginLeft="@dimen/_40sdp"
        android:layout_marginTop="@dimen/_24sdp"
        android:layout_marginRight="@dimen/_10sdp"
        android:layout_marginBottom="@dimen/_10sdp"
        android:fontFamily="@font/gothambook"
        android:padding="@dimen/_5sdp"
        android:text="price"
        android:textSize="@dimen/_20ssp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/txt_order_quantity"
        app:layout_constraintTop_toBottomOf="@+id/txt_order_title"
        app:layout_constraintVertical_bias="1.0" />
</androidx.constraintlayout.widget.ConstraintLayout>