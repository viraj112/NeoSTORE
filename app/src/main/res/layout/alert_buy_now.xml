<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/_10sdp">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/txt_buy_now_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/_20sdp"
        android:layout_marginTop="16dp"
        android:layout_marginRight="@dimen/_20sdp"
        android:fontFamily="@font/gothammedium"
        android:padding="@dimen/_10sdp"
        android:textColor="@color/color_black_dark"
        android:textSize="@dimen/_25ssp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/iv_buy_now"
        android:layout_width="0dp"
        android:layout_height="@dimen/_100sdp"
        android:layout_marginTop="@dimen/_16sdp"
        android:background="@drawable/bg_edit_quantity"
        app:layout_constraintEnd_toEndOf="@+id/txt_buy_now_title"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/txt_buy_now_title"
        app:layout_constraintTop_toBottomOf="@+id/txt_buy_now_title" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/appCompatTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_16sdp"
        android:fontFamily="@font/gothambook"
        android:padding="@dimen/_5sdp"
        android:text="@string/enter_quantity"
        android:textColor="@color/color_black_dark"
        android:textSize="@dimen/_20ssp"
        app:layout_constraintEnd_toEndOf="@+id/iv_buy_now"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="@+id/iv_buy_now"
        app:layout_constraintTop_toBottomOf="@+id/iv_buy_now" />

    <EditText
        android:id="@+id/edt_buynow_quantity"
        android:layout_width="@dimen/_100sdp"
        android:layout_height="@dimen/_40sdp"
        android:layout_marginTop="@dimen/_16sdp"
        android:background="@drawable/bg_edit_quantity"
        android:gravity="center"
        android:padding="@dimen/_10sdp"
        android:inputType="number"
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="@+id/appCompatTextView"
        app:layout_constraintHorizontal_bias="0.492"
        app:layout_constraintStart_toStartOf="@+id/appCompatTextView"
        app:layout_constraintTop_toBottomOf="@+id/appCompatTextView" />

    <Button
        android:id="@+id/btn_buynow_submit"
        android:layout_width="@dimen/_200sdp"
        android:layout_height="@dimen/_45sdp"
        android:layout_marginTop="32dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/bg_button_buynow"
        android:fontFamily="@font/gothammedium"
        android:padding="@dimen/_10sdp"
        android:text="@string/submit"
        android:textAllCaps="true"
        android:textColor="@color/color_white"
        android:textSize="@dimen/_23ssp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.569"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edt_buynow_quantity" />
</androidx.constraintlayout.widget.ConstraintLayout>