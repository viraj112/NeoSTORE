<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/_10sdp"
    android:id="@+id/constraint_item_tables"
    >

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/image_view_tables"
        android:layout_width="@dimen/_70sdp"
        android:layout_height="@dimen/_70sdp"
        android:layout_marginStart="@dimen/_10sdp"
        android:layout_marginLeft="@dimen/_16sdp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/txt_title_tables"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/_10sdp"
        android:layout_marginTop="16dp"
        android:layout_marginRight="@dimen/_10ssp"
        android:fontFamily="@font/gothammedium"
        android:text="helooo"
        android:textColor="@color/color_black"
        android:textSize="@dimen/_15ssp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.52"
        app:layout_constraintStart_toEndOf="@+id/image_view_tables"
        app:layout_constraintTop_toTopOf="@+id/image_view_tables" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/txt_sub_title_tables"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/_10sdp"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/gothambook"
        android:text="hellooooo"
        android:textColor="@color/color_black"
        app:layout_constraintEnd_toEndOf="@+id/txt_title_tables"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/image_view_tables"
        app:layout_constraintTop_toBottomOf="@+id/txt_title_tables" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/txt_tables_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="@dimen/_5sdp"
        android:fontFamily="@font/gothammedium"
        android:text="helooo"
        android:textColor="@color/color_red"
        android:textSize="@dimen/_20ssp"
        android:layout_marginBottom="@dimen/_10sdp"
        app:layout_constraintStart_toEndOf="@+id/image_view_tables"
        app:layout_constraintTop_toBottomOf="@+id/txt_sub_title_tables" />

    <RatingBar
        android:id="@+id/ratingbar_tables"
        style="?android:ratingBarStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/_20sdp"
        android:layout_marginStart="36dp"
        android:layout_marginLeft="36dp"
        android:layout_marginTop="12dp"
        android:progressTint="@color/color_yello"
        app:layout_constraintStart_toEndOf="@+id/txt_tables_price"
        app:layout_constraintTop_toBottomOf="@+id/txt_sub_title_tables"
        app:layout_goneMarginLeft="@dimen/_10sdp" />

</androidx.constraintlayout.widget.ConstraintLayout>